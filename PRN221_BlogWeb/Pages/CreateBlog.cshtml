@page
@model PRN221_BlogWeb.Pages.CreateBlogModel
@{
    <form asp-page="/CreateBlog" method="post">
        <div class="w-100 blog-parent" >
            <h3>Blog Title</h3>
            <input class="w-100" type="text" placeholder="Blog Title" asp-for=@Model.blog.Title required>
            <span class="text-danger" asp-validation-for="@Model.blog.Title" />

            <h3>Blog Content</h3>
            <input class="w-100 para-text" type="text" placeholder="Blog Content" asp-for=@Model.blog.Content required>
            <span class="text-danger" asp-validation-for="@Model.blog.Content" />
            <select asp-for="@Model.blog.CategoryId">
                @foreach (var category in @Model.categories)
                {
                    <option value="@category.CategoryId">@category.CategoryName</option>
                }
            </select>
            <input class="btn btn-primary" type="submit" value="Create" />
        </div>
    </form>
}
<style>
    .para-text{
        width: 100%;
        height:500%;
        border: 5px solid gray;
    }
    .blog-parent{
        width: 80%;
        padding: 10px;        
        height: 500%;
        margin: 0;
    }
</style>
